<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView_top_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_top_arc" />

        <TextView
            android:id="@+id/textView_finished_job_details_name_repman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/imageView_top_bar"
            app:layout_constraintEnd_toEndOf="@id/imageView_top_bar"
            app:layout_constraintStart_toStartOf="@id/imageView_top_bar"
            app:layout_constraintTop_toTopOf="@id/imageView_top_bar" />

        <TextView
            android:id="@+id/textView_finished_job_details_type_repman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="25dp"
            android:text="@string/text_job_details_type"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageView_top_bar" />

        <TextView
            android:id="@+id/textView_finished_job_details_type_text_repman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="25dp"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/textView_finished_job_details_type_repman"
            app:layout_constraintTop_toBottomOf="@id/imageView_top_bar" />

        <TextView
            android:id="@+id/textView_finished_job_details_description_repman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="20dp"
            android:text="@string/text_job_details_description"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView_finished_job_details_type_repman" />

        <TextView
            android:id="@+id/textView_finished_job_details_description_text_repman"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/textView_finished_job_details_description_repman"
            app:layout_constraintTop_toBottomOf="@id/textView_finished_job_details_description_repman" />

        <ImageView
            android:id="@+id/imageView_finished_job_details_image_repman"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView_finished_job_details_description_text_repman" />

        <TextView
            android:id="@+id/textView_finished_job_details_deadline_repman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="20dp"
            android:text="@string/text_job_details_deadline"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageView_finished_job_details_image_repman" />

        <TextView
            android:id="@+id/textView_finished_job_details_deadline_text_repman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/textView_finished_job_details_deadline_repman"
            app:layout_constraintTop_toBottomOf="@id/imageView_finished_job_details_image_repman" />

        <TextView
            android:id="@+id/textView_finished_job_details_location_repman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="20dp"
            android:text="@string/text_job_details_location"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView_finished_job_details_deadline_repman" />

        <TextView
            android:id="@+id/textView_finished_job_details_location_text_repman"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="32dp"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/textView_finished_job_details_location_repman"
            app:layout_constraintTop_toBottomOf="@id/textView_finished_job_details_deadline_repman" />


        <TextView
            android:id="@+id/textView_finished_job_details_date_posted_repman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="30dp"
            android:text="@string/text_job_details_post_date"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView_finished_job_details_location_text_repman" />

        <TextView
            android:id="@+id/textView_finished_job_details_date_posted_text_repman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="30dp"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/textView_finished_job_details_date_posted_repman"
            app:layout_constraintTop_toBottomOf="@id/textView_finished_job_details_location_text_repman" />

        <TextView
            android:id="@+id/textView_finished_job_details_date_finished_repman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="20dp"
            android:text="@string/text_date_finished"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView_finished_job_details_date_posted_repman" />

        <TextView
            android:id="@+id/textView_finished_job_details_date_finished_text_repman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/textView_finished_job_details_date_finished_repman"
            app:layout_constraintTop_toBottomOf="@id/textView_finished_job_details_date_posted_text_repman" />

        <TextView
            android:id="@+id/textView_job_sender_repman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="30dp"
            android:text="@string/text_job_details_sender"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView_finished_job_details_date_finished_repman" />

        <TextView
            android:id="@+id/textView_job_sender_name_repman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:textColor="@color/appBlue"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/textView_job_sender_repman"
            app:layout_constraintTop_toBottomOf="@id/textView_finished_job_details_date_finished_repman" />

        <Button
            android:id="@+id/button_finished_job_details_download_worksheet_repman"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="@string/button_text_download_worksheet"
            app:cornerRadius="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView_job_sender_name_repman" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>