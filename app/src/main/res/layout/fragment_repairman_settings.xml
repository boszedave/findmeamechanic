<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView_top_bar_repairman"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_top_arc" />

    <TextView
        android:id="@+id/textView_active_jobs_repairman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:elevation="5dp"
        android:text="@string/text_title_settings"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        android:textColor="@color/title"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/settings_profile_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:text="@string/settings_profile_headline"
        android:textColor="@color/title"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView_top_bar_repairman" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settings_profile_title" />

    <ImageView
        android:id="@+id/imageView_edit_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_baseline_how_to_reg_24"
        app:layout_constraintStart_toStartOf="@id/settings_profile_title"
        app:layout_constraintTop_toBottomOf="@id/divider" />

    <TextView
        android:id="@+id/settings_profile_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="3dp"
        android:text="@string/settings_profile_modify"
        android:textColor="@color/title"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/imageView_edit_profile"
        app:layout_constraintTop_toTopOf="@id/imageView_edit_profile" />

    <View
        android:id="@+id/divider_2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settings_profile_edit" />

    <ImageView
        android:id="@+id/imageView_profile_log_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_baseline_arrow_right_alt_24"
        app:layout_constraintStart_toStartOf="@id/settings_profile_title"
        app:layout_constraintTop_toBottomOf="@id/divider_2" />


    <TextView
        android:id="@+id/settings_profile_log_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="@string/settings_logout"
        android:textColor="@color/title"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/imageView_profile_log_out"
        app:layout_constraintTop_toTopOf="@id/imageView_profile_log_out" />

    <View
        android:id="@+id/divider_3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settings_profile_log_out" />

    <TextView
        android:id="@+id/settings_notification_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:text="@string/settings_notifications_headline"
        android:textColor="@color/title"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider_3" />

    <View
        android:id="@+id/divider_4"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settings_notification_title" />

    <ImageView
        android:id="@+id/imageView_notification_job"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_baseline_work_24"
        app:layout_constraintStart_toStartOf="@id/settings_profile_title"
        app:layout_constraintTop_toBottomOf="@id/divider_4" />

    <TextView
        android:id="@+id/settings_notification_job"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="2dp"
        android:text="Elfogadtak egy munkÃ¡ra"
        android:textColor="@color/title"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/imageView_notification_job"
        app:layout_constraintTop_toTopOf="@id/imageView_notification_job" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switch_settings_notify_job"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/settings_notification_job"
        app:layout_constraintTop_toBottomOf="@id/divider_4"
        app:useMaterialThemeColors="false" />

    <View
        android:id="@+id/divider__5"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settings_notification_job" />

</androidx.constraintlayout.widget.ConstraintLayout>